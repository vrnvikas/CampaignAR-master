<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="186dp">

    <ImageView
        android:id="@+id/ivInterest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/agriculture" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivhover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:alpha=".6"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_eye"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

            <ayar.oktay.advancedtextview.AdvancedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                app:fontFile="@string/Gotham_Book"
                android:layout_gravity="center_vertical"
                android:text="14K Views"/>

        </LinearLayout>


        <ayar.oktay.advancedtextview.AdvancedTextView
            android:id="@+id/tvTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:fontFile="@string/Gotham_Bold"
            android:textColor="@color/white"
            android:text="AGRICULTURE"
            android:textSize="20sp"/>
    </RelativeLayout>

</RelativeLayout>