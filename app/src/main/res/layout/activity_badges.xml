<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_badges"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.campaignar.smis.campaignar.Activity.BadgesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:background="@color/bg_gray_badge"
            android:orientation="vertical">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:src="@drawable/badgeload" />

            <ayar.oktay.advancedtextview.AdvancedTextView
                android:id="@+id/tvCollectedbadges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="2/6"
                app:fontFile="@string/Gotham_Bold"
                android:textColor="#333333"
                android:textSize="16sp" />

            <ayar.oktay.advancedtextview.AdvancedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                app:fontFile="@string/Gotham_Book"
                android:text="EARN MORE BADGES BYCOMPLETING EACH TASK"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_weight="3.5">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/badges_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>
