<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:background="@color/gray_background">

    <ImageView
        android:id="@+id/row_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_badgeload" />

    <ayar.oktay.advancedtextview.AdvancedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        app:fontFile="@string/Gotham_Bold"
        android:layout_toRightOf="@+id/row_image_view"
        android:layout_toEndOf="@+id/row_image_view"
        android:text="2 / 6"
        android:textSize="18sp" />

    <ayar.oktay.advancedtextview.AdvancedTextView
        android:id="@+id/row_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        app:fontFile="@string/Gotham_Book"
        android:textColor="@color/gray_40"
        android:layout_toLeftOf="@+id/row_image_view_rightArrow"
        android:layout_toStartOf="@+id/row_image_view_rightArrow"
        android:text="View Badges"
        android:layout_centerVertical="true"
        android:textSize="14sp" />


    <ImageView
        android:id="@+id/row_image_view_rightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_arrow_right" />

</RelativeLayout>