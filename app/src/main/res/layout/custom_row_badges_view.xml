<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/badgesample" />

    <ayar.oktay.advancedtextview.AdvancedTextView
        android:id="@+id/tvBadgeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center_horizontal"
        android:text="Socialy Responsible"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:fontFile="@string/Gotham_Medium" />

    <ayar.oktay.advancedtextview.AdvancedTextView
        android:id="@+id/tvBadgeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Complete 5 more AR task"
        android:textColor="#808080"
        android:textSize="12sp"
        app:fontFile="@string/Gotham_Italic" />

</LinearLayout>